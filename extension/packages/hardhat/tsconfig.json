{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "hardhat"],
      "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~~/*": ["./*"]
    }
    },
    "include": ["./scripts", "./deploy", "./test", "./typechain-types"],
    "exclude": ["node_modules"]
  }
  